<!-- This is the ejs file that displays the header on each rendered ejs page -->

<!-- First couple lines are html boilerplate for doctype and establishing the language used -->
<!DOCTYPE html>
<html lang="en">
<!-- Contains metadata for the page/site -->
<head>
    <!-- Links CSS file within the public folder -->
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <!-- Defines character set -->
    <meta charset="UTF-8">
    <!-- Boilerplate for browser compatibility -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Specifies to use full viewport of the device -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Creates favicon displayed on the browser tab -->
    <link rel="icon" href="./images/boxicon.png">
    <!-- Defines title of the page displayed on the browser tab -->
    <title>PackingInv Home</title>
</head>
<body>
    <!-- Defines header (navbar) within the body of the page -->
    <header class="header">
      <!-- Creates link back to the main page -->
      <!-- This link must be /pcbinv on the server version (leave as "/" for localhost) -->
      <a href="/" class="nav-logo-text">PackingInv</a>

      <!-- Places image of rocket hamster in the navbar -->
      <img class="nav-image" src="./images/boxgif.webp" alt="BOX" style="width: 50px; height: auto;">
      
      <!-- Main container with all of the links to other webpages -->
        <nav id="nav">
          
          <!-- Links to other webpages, with the destination set to render /___ -->
          <!-- These destinations are handled within the app.js file -->
          <a href="/items" class="nav-link">Items</a>
          <a href="/totes" class="nav-link">Totes</a>
          <!-- <a href="/orders" class="nav-link">Orders</a>
          <a href="/cart" class="nav-link">My Cart</a>
          <a href="/signup" class="nav-link">Sign Up</a> -->
        
        </nav>
    
    </header>

